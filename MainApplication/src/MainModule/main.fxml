<BorderPane prefHeight="650.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainModule.MainController">
   <left>
      <AnchorPane prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton fx:id="toggleBtnNotice" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" selected="true" style="-fx-border-color: black;" text="알림" userData="notice">
               <toggleGroup>
                  <ToggleGroup fx:id="groupCategory" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="toggleBtnUser" layoutY="100.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black;" text="사용자 목록" toggleGroup="$groupCategory" userData="user" />
            <ToggleButton fx:id="toggleBtnChat" layoutY="200.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black;" text="채팅" toggleGroup="$groupCategory" userData="chat" />
            <ToggleButton fx:id="toggleBtnBoard" layoutY="300.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black;" text="게시판" toggleGroup="$groupCategory" userData="board" />
            <Button fx:id="btnSchedule" layoutY="550.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" text="일정" />
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane prefHeight="650.0" prefWidth="95.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
   <StackPane prefHeight="200.0" prefWidth="300.0">
      <children>
            <AnchorPane fx:id="paneNotice" prefHeight="200.0" />
            <AnchorPane fx:id="paneUser" prefHeight="200.0" />
            <AnchorPane fx:id="paneChat" prefHeight="200.0" />
         <AnchorPane fx:id="paneBoard" BorderPane.alignment="CENTER">
            <children>
               <AnchorPane prefHeight="50.0" prefWidth="305.0">
                  <children>
                     <ComboBox fx:id="comboFilter" layoutX="7.0" layoutY="13.0" prefHeight="25.0" prefWidth="133.0" />
                        <Button fx:id="btnRefresh" layoutX="150.0" layoutY="13.0" mnemonicParsing="false" text="목록 새로고침" />
                     <Button fx:id="btnWrite" layoutX="253.0" layoutY="13.0" mnemonicParsing="false" text="글쓰기" />
                  </children>
               </AnchorPane>
               <TableView fx:id="viewBoardList" layoutY="50.0" prefHeight="600.0" prefWidth="305.0">
            </TableView>
            </children>
         </AnchorPane>
      </children>
      </StackPane>
   </center>
</BorderPane>
